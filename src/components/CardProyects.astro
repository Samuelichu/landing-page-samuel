---
interface Props {
  titulo: string;
  descripcion: string;
  src: string;
} 

const { titulo, descripcion, src } = Astro.props;
---

<div class="flex flex-col rounded-xl bg-[#D4E6B7] max-w-lg hover:shadow-xl focus:outline-hidden focus:shadow-lg transition-shadow cursor-pointer">
  <figure class="rounded-t-xl">
    <img class="object-cover rounded-t-xl min-h-64" src={src} alt="Captura de Pantalla Web Chirasoft" />
  </figure>
  <div class="flex flex-col py-5 px-9 text-primary gap-5">
    <p class="font-semibold text-lg">
      {titulo}
    </p>
    <p class="font-medium text-md">{descripcion}</p>
  </div>
</div>
