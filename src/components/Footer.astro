---
import InfoContact from "./InfoContact.astro";
---

<div class="py-5">
  <div
    class="relative flex flex-col gap-4 mx-11 p-5 bg-primary rounded-t-xl rounded-br-xl overflow-hidden"
  >
    <!-- Seccion principal -->
    <div class="flex flex-col gap-5">
      <div class="flex flex-col gap-2">
        <p class="text-secondary font-medium text-6xl max-w-4xl">
          ¿Estas listo para transformar tu idea en realidad?
        </p>
        <div class="flex flex-row gap-40 items-center">
          <p class="text-secondary text-8xl font-medium">CONVERSEMOS!</p>
          <button
            class="border-2 rounded-2xl px-8 py-4 text-2xl bg-secondary font-normal"
            >Estoy listo</button
          >
        </div>
      </div>
      <hr class="border-2 bg-secondary rounded-full self-start w-full" />
      <!-- Seccion InfoContacto-->
      <div class="flex flex-row gap-20 self-start">
        <InfoContact
          titulo="Correo Electrónico"
          descripcion="chavezzsam@gmail.com"
        />
        <InfoContact titulo="Telefono" descripcion="+51 939390382" />
        <svg
          class="absolute -right-4 -rotate-12"
          xmlns="http://www.w3.org/2000/svg"
          width="100"
          height="110"
          viewBox="0 0 50 50"
          ><g fill="none" stroke="#FFFBDf" stroke-width="4"
            ><path
              stroke-linejoin="round"
              d="M3 24a21 21 0 1 0 42 0a21 21 0 1 0-42 0"></path><path
              stroke-linejoin="round"
              d="M15 24a9 21 0 1 1 18 0a9 21 0 1 1-18 0"></path><path
              stroke-linecap="round"
              d="M4.5 31h39m-39-14h39"></path></g
          ></svg
        >
      </div>
    </div>
  </div>
</div>
