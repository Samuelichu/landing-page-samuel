<header class="">
  <nav
  id="navbar"
    class="flex fixed top-0 left-0 right-0 bg-transparent z-50 flex-row rounded-b-2xl max-w-[1204px] mx-auto mt-6 shadow-md px-12 py-6 gap-16 font-semibold text-3xl items-end justify-between"
  >
    <div class="rounded-full w-5 h-5 bg-black"></div>
    <div id="nav-links" class="flex flex-row gap-16">
      <a href="#">Inicio</a>
      <a href="#">Herramientas</a>
      <a href="#">Proyectos</a>
      <a href="#">Contacto</a>
    </div>
  </nav>
</header>

<script>
  import gsap from "gsap";
import ScrollTrigger from "gsap/ScrollTrigger";

gsap.registerPlugin(ScrollTrigger);

// 
gsap.to("#navbar", {
  scrollTrigger: {
    trigger: "body",
    start: "top top",
    end: "+=200",
    scrub: 1,
  },
  padding: "0.5rem 3rem", // achica padding (py-2 px-12 aprox)
  backgroundColor: "rgba(255, 255, 255, 0.25)",  // como bg-white/25
  backdropFilter: "blur(12px)",  
  webkitBackdropFilter: "blur(12px)",           // para Safari
  borderRadius: "2rem", 
  maxWidth: "800px",              // como backdrop-blur-md
  // borderBottom: "1px solid rgba(255, 255, 255, 0.3)", // (opcional) para efecto de borde de vidrio // efecto de vidrio real
  ease: "power1.out",
});

// Reduce el tama√±o del texto
gsap.to("#nav-links a", {
  scrollTrigger: {
    trigger: "body",
    start: "top top",
    end: "+=200",
    scrub: 1,
  },
  fontSize: "1rem", // text-base
});

</script>
