---
interface Props {
    titulo: string;
    descripcion: string;
}

const { titulo, descripcion } = Astro.props;
---

<div class="flex flex-col">
  <p class="text-secondary opacity-50 font-medium text-sm md:text-lg">{titulo}</p>
  <p class="text-secondary font-medium text-sm md:text-xl">{descripcion}</p>
</div>
