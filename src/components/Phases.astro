---
interface Props {
  titulo: string;
  number: string;
  descripcion: string;
}

const { titulo, number, descripcion } = Astro.props;
---

<div
  class="flex flex-col font-semibold text-secondary max-w-64 gap-5"
>
  <h2 class="text-xl h-full">{titulo}</h2>
  <div class="flex flex-row gap-5">
    <p class="text-lg">{number}</p>
    <p class="text-sm">{descripcion}</p>
  </div>
</div>
