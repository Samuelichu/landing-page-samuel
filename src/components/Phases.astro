---
interface Props {
  titulo: string;
  number: string;
  descripcion: string;
}

const { titulo, number, descripcion } = Astro.props;
---

<div
  class="flex flex-col md:items-center justify-between gap-4 text-secondary max-w-xs md:max-w-56"
>
  <div class="flex items-center h-full">
    <h2 class="text-xl text-center font-semibold">{titulo}</h2>
  </div>
  <div class="flex flex-row gap-5 px-10 md:px-0">
    <p class="text-lg font-semibold">{number}</p>
    <p class="text-sm">{descripcion}</p>
  </div>
</div>
